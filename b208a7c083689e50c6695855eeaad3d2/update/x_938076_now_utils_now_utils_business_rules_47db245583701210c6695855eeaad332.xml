        <script><![CDATA[(function(current, gs) {
 var chg = new GlideRecord('change_request');
 if (chg.get(current.task)) {
  //check to see if the change has a proposed change
  if (!chg.proposed_change.isNil()) {
   //apply the proposed change to the affected ci record
   //get the CI record
   var ci = new GlideRecord(current.ci_item.sys_class_name);
   
   if (ci.get(current.ci_item)) {
    gs.addInfoMessage(gs.getMessage("New CI: {0} added, applying bulk proposed change", current.ci_item.getDisplayValue()));
    ci.applyEncodedQuery(chg.proposed_change);
    var base = new SNC.CMDBUtil();
    base.baselineProposedChangesGenDIFF(ci, current.sys_id);
   }
  }
 }
})(current, gs);]]></script>
