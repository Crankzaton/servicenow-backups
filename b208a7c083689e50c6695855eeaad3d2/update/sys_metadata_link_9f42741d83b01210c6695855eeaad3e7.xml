        &lt;script&gt;&lt;![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var parent_record = new GlideRecord('dmn_demand');
    if (parent_record.get('1cb9d28847a93950020ba9f8536d433e')) {
		var workNotes='';
        var survey_response = new GlideRecord('asmt_metric_result');
        survey_response.addQuery('instance', 'cfe91a8847a93950020ba9f8536d43df');
        survey_response.query();
        //var metName = survey_response.instance.metric_type.getDisplayValue();
        while (survey_response.next()) {
            
			//workNotes +=metName;
            workNotes += '&lt;style&gt; table, th, td {border: 1px solid black;border-collapse: collapse;background-color:lightblue;padding:2px;text-align: left;}&lt;/style&gt;&lt;table style="width:100%"&gt;';

            // Assuming assessment responses are stored in the "Question" field
            workNotes += '&lt;tr style="height: 50.4px;"&gt;&lt;td style="width: 700px; height: 15.4px;"&gt;&lt;strong&gt;' + survey_response.instance_question.getDisplayValue() + '&lt;/strong&gt;&lt;/td&gt;' + '&lt;td style="text-align: center; "width: 700px; height: 15.4px;""&gt;' + survey_response.string_value + '&lt;/td&gt;';

            // End the table
            workNotes += '&lt;/table&gt;';

        }

        parent_record.work_notes = '[code]' + workNotes + '[/code]';
        parent_record.update();
    }



})(current, previous);]]&gt;&lt;/script&gt;
