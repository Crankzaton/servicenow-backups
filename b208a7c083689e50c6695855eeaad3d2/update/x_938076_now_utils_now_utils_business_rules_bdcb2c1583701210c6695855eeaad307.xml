        <script><![CDATA[/**
 * Check if the reservable purpose that is being added to the location reservable purpose table is active
 * Incase it is inactive, abort the operation and display an error to the user
 * @param {GlideRecord} current
 * @param {GlideRecord} previous
 * @return {void}
 */
(function executeRule(current, previous /*null when async*/ ) {
    var escapedReservablePurposeName = GlideStringUtil.escapeHTML(current.reservable_purpose.name);
    var errorMsg = gs.getMessage(
        'reservable purpose {0} is inactive and cannot be added to the location',
        String(escapedReservablePurposeName)
    );
    gs.addErrorMessage(errorMsg);
    current.setAbortAction(true);
    return;
})(current, previous);]]></script>
