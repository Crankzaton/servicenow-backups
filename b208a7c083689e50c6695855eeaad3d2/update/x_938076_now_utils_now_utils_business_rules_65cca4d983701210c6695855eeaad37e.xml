        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

 var gr = new GlideAggregate('time_sheet_policy');
 gr.addAggregate('COUNT');
 gr.addQuery('is_default', true);
 if (current.operation() == 'update')
  gr.addQuery('sys_id', '!=', current.getValue('sys_id'));
 gr.setGroup(false);
 gr.query();
 
 var defaultPolicyAlreadyExists = false;
 if (gr.next()) {
  var count = gr.getAggregate('COUNT');
  if (JSUtil.notNil(count))
   count = parseInt(count);
  defaultPolicyAlreadyExists = count > 0;
 }
 if (defaultPolicyAlreadyExists) {
  gs.addErrorMessage(gs.getMessage('Only one time sheet policy can be set as default'));
  current.setAbortAction(true);
 }
 
})(current, previous);]]></script>
