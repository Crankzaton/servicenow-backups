        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
 if (current.child_hr_service == current.parent_service) {
  gs.addErrorMessage(gs.getMessage('The child HR service cannot be the same as the parent'));
  current.setAbortAction(true);
 } else {
  var recursionCheck = new sn_hr_core.hr_ServiceActivityRecursionChecker(current.child_hr_service, current.parent_service);
  var isRecursive = recursionCheck.isRecursive();
  if (isRecursive) {
   gs.addErrorMessage(gs.getMessage('There is a recursive relationship with the child and parent HR services'));
   current.setAbortAction(true);
  }
 }
})(current, previous);]]></script>
