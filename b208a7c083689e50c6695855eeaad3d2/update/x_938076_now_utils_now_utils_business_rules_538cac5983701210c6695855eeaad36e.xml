        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

 // Add your code here
 var gr = new GlideRecord("awa_presence_state");
 gr.addQuery("service_channels", "CONTAINS", current.sys_id);
 gr.query();
 while(gr.next()) {
  if(gr.getValue("service_channels") == current.sys_id) {
   gr.setValue("active", false);
   gr.setValue("available_to_receive_work_items", false);
   gr.update();
  } else {
   var scs = gr.getValue("service_channels").split(',');
   for(var i = 0 ; i < scs.length ; i++) {
    if(scs[i] == current.sys_id) {
      scs.splice(i, 1);
      gr.setValue("service_channels", scs.join());
      gr.update();
    }
     }
  }
 }

})(current, previous);]]></script>
