        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    if (!GlidePluginManager.isActive('sn_gfa')) {
        return;
    }

    // Empty Target but Target BreakDown or Cumulative Target is not empty
    if (current.getValue("target_value") === "" &&
        (global.JSUtil.notNil(current.getValue("breakdown_interval")) ||
            current.cumulative_target)) {
        current.setAbortAction(true);
    }

    // Non empty Cumulative Target but Empty Target BreakDown or Qualitative Target
    if (current.cumulative_target &&
        (global.JSUtil.nil(current.getValue("breakdown_interval")) ||
            current.getValue("type") === "milestone")) {
        current.setAbortAction(true);
    }


})(current, previous);]]></script>
