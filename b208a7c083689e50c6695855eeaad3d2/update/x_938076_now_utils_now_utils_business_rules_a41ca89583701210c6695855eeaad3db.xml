        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

 var currentStart = new GlideTime();
 currentStart.setValue(current.daily_start_time.toString() + ":00");
 
 var prevStart = new GlideTime();
 prevStart.setValue(previous.daily_start_time.toString() + ":00");
 
 if(currentStart > prevStart){
  var aptUtil = new sn_apptmnt_booking.AppointmentBookingUtil();
  var appointmentsExists = aptUtil.hasActiveAppointmentsByCatalog(current.catalog_item, current.future_bookable_max_days);

  if (appointmentsExists) {
   current.setAbortAction(true);
   gs.addErrorMessage(gs.getMessage("Active appointments found. Before updating the {0}, clear active appointments affected by the change.", "Daily start time"));
   gs.setRedirect(current);
  }
 }
 
})(current, previous);]]></script>
