        <script><![CDATA[/**  
 Service-now.com
 
 Description: If property is enabled, auto-close milestone tasks when they become active
**/
closeMilestone();

function closeMilestone() {
    var stateUtil = new PlannedTaskStateUtil(current);
    var stateBucket = stateUtil.getBucketForState(current.state);
    var closeState = stateUtil.getDefaultCloseState();
    if (stateBucket != PlannedTaskStateUtil.WORK_IN_PROGRESS)
        return;
    
    gs.addInfoMessage(gs.getMessage("Milestone {0} ({1}) was automatically closed.",[current.getDisplayValue(),current.short_description]));
    current.state = closeState;
    current.active = false;
    current.setValue("work_duration", "1970-01-01 00:00:00");
    current.percent_complete = 100;
    current.comments = "Task automatically closed by business rule: Auto close milestones";
}]]></script>
