        &lt;script&gt;&lt;![CDATA[(function executeRule(current, previous /*null when async*/) {

	var msgNewAndTableLevel = gs.getMessage("Warning: Empty ACLs allow unauthenticated access. A Role, Security Attribute or Script must be specified to properly secure access with this ACL.");
	var msgFieldLevel = gs.getMessage("Warning: Empty ACLs potentially allows for unauthenticated access. A Role, Security Attribute or Script must be specified to properly secure access with this ACL.");

	if (current.isNewRecord()) {
		gs.addInfoMessage(msgNewAndTableLevel);
		return;
	}

	var trimmedScript = (" " + current.script).trim();
	var emptyScript = (trimmedScript == "");
	
	var emptySecAttr = (current.security_attribute == "");
	var emptyCondition = (current.condition == "");
	
	// something set
	if (!(emptyScript &amp;&amp; emptySecAttr &amp;&amp; emptyCondition)) {
		return;
	}

	// now check roles
	var gr = new GlideRecord("sys_security_acl_role");
	gr.addQuery("sys_security_acl", current.sys_id);
	gr.query();

	if (gr.hasNext()) {
		return;
	}

	// an empty ACL
	var fld = current.name.split(".");

	if (fld.length &gt; 1)
		gs.addInfoMessage(msgFieldLevel);
	else
		gs.addInfoMessage(msgNewAndTableLevel);

})(current, previous);
]]&gt;&lt;/script&gt;
