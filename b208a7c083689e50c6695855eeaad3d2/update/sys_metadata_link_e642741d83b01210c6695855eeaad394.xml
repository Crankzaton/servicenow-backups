        &lt;name&gt;Copy to Worknotes / BR Original copy&lt;/name&gt;
        &lt;record_for_rollback&gt;true&lt;/record_for_rollback&gt;
        &lt;script&gt;&lt;![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    var parRec = 'c0ca512c4761f950020ba9f8536d4337'; //Demand Record
    var asmtRec = '7fca11ec4761f950020ba9f8536d4344'; //Assessment Record
    var metType = 'Demand Assessment'; //Metric name
    var subBy = 'Marcus Mathew';

    var parent_record = new GlideRecord('dmn_demand');
    if (parent_record.get(parRec)) {
        var workNotes = '';
        var survey_response = new GlideRecord('asmt_metric_result');
        survey_response.addQuery('instance', asmtRec);
        survey_response.query();
        while (survey_response.next()) {

            workNotes += '&lt;style&gt; table, th, td {border: 1px solid black;border-collapse: collapse;background-color:lightyellow;padding:2px;text-align: left;}&lt;/style&gt;&lt;table style="width:100%"&gt;';

            // Assuming assessment responses are stored in the "Question" field
            workNotes += '&lt;tr style="height: 50.4px;"&gt;&lt;td style="width: 500px; height: 15.4px;"&gt;&lt;strong&gt;' + survey_response.instance_question.getDisplayValue() + '&lt;/strong&gt;&lt;/td&gt;' + '&lt;td style="text-align: center; "width: 700px; height: 15.4px;""&gt;' + survey_response.string_value + '&lt;/td&gt;';

            // End the table
            workNotes += '&lt;/table&gt;';

        }

        parent_record.work_notes = '[code]' +
            '&lt;p style="text-align: center;"&gt;&lt;span style="font-size: 14pt;"&gt;&lt;strong&gt;' + metType + " " + '&lt;/strong&gt;(&lt;em&gt;&lt;span style="font-size: 10pt;"&gt;Submitted by: &lt;strong&gt;' + subBy + '&lt;/strong&gt;&lt;/span&gt;&lt;/em&gt;)&lt;/span&gt;&lt;/p&gt;' +
            '&lt;table style="border-collapse: collapse; width: 100.05%; height: 30.4px; border-color: #000000; border-style: solid;" border="1"&gt;&lt;tbody&gt;&lt;tr style="height: 30.4px;"&gt;&lt;td style="width: 60.6755%; height: 30.4px; text-align: center;"&gt;&lt;span style="font-size: 10pt;"&gt;&lt;strong&gt;Assessment Question&lt;/strong&gt;&lt;/span&gt;&lt;/td&gt;&lt;td style="width: 35.3009%; height: 30.4px; text-align: center;"&gt;&lt;span style="font-size: 10pt;"&gt;&lt;strong&gt;Response&lt;/strong&gt;&lt;/span&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/tbody&gt;&lt;/table&gt;' + '&lt;/strong&gt;&lt;/span&gt;&lt;/p&gt;' + workNotes + '[/code]';
        parent_record.update();
    }



})(current, previous);]]&gt;&lt;/script&gt;
