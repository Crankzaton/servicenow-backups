        <script><![CDATA[(function executeRule(current, previous) {
 var isCostPlanBatch = (typeof costPlanBatch !== 'undefined') && JSUtil.notNil(costPlanBatch);
 if(isCostPlanBatch && costPlanBatch)
   return;
    var taskRef = current.task.getRefRecord();
    if((taskRef.instanceOf('pm_project') || taskRef.instanceOf('pm_project_task')) && 
        (current.cost_local_currency.changes() || current.resource_type.changes() || current.cost_default_currency.changes() || current.operation() != 'update') ) {
        new PlannedTaskEntityUpdater().updatePlannedTaskEstimatedCost(taskRef);
    }   
 else if((taskRef.instanceOf('dmn_demand'))){
  (new PPMTaskEntityUpdater()).updateDemandEntity(taskRef);
 }
    
})(current, previous);]]></script>
