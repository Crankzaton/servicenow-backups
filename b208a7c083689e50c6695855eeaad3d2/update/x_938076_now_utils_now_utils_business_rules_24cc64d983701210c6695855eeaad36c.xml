        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

 if (current.operation() == 'insert') {
  current.capacity_hours = current.scheduled_hours;
  current.available_hours = current.scheduled_hours;
 } else {
  var updateCapacity = current.excluded_hours.changes();
  if (updateCapacity) {
   current.capacity_hours = current.scheduled_hours - current.excluded_hours;
  }
  var availableHours = current.capacity_hours - current.allocated_hours;
  if (availableHours < 0)
   availableHours = 0;
  current.available_hours = availableHours;
 }

})(current, previous);]]></script>
