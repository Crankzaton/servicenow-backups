        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

 var ps_id = current.getValue("sys_id");
 var OFFLINE_STATE_ID = "9cd83267575313005baaaa65ef94f98b";
 
 var gr = new GlideRecord("awa_agent_presence");
 gr.addQuery("current_presence_state", ps_id);
 gr.query();
 while(gr.next()) {
  var agent = gr.getValue("awa_agent");
  var grAgentGrp = new GlideRecord("sys_user_grmember");
  grAgentGrp.addQuery("user", agent);
  grAgentGrp.addQuery("group", "IN", current.getValue("apply_to_groups"));
  grAgentGrp.query();
  if(grAgentGrp.getRowCount() < 1) {
   
   gr.setValue("current_presence_state", OFFLINE_STATE_ID);
   gr.update();
  }
  
 }

})(current, previous);]]></script>
