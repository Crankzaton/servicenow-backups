        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
 var update_time  = new GlideDateTime();
 
 // updates the parent content pack 
 var pa_content_pack = new GlideRecord('pa_content_pack');
 if(pa_content_pack.get(current.pa_content_pack)){
  if(current.metadata != previous.metadata){
   current.content_updated = update_time;
   pa_content_pack.content_updated = update_time;
  }
  else
   pa_content_pack.content_updated = current.content_updated;
  pa_content_pack.update_available = true;
  pa_content_pack.update();
 }
 current.update_available = true;
 current.update();
})(current, previous);]]></script>
